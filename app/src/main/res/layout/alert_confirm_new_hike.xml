<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <TextView
            android:textAlignment="center"
            style="@style/titleText"
            android:textSize="25dp"
            android:fontFamily="@font/bahnschrift"
            android:text="New hike details"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cfName"
                    style="@style/titleText"
                    android:text="Name:"/>
                <TextView
                    android:id="@+id/cfLocation"
                    style="@style/titleText"
                    android:text="Location:"/>
                <TextView
                    android:id="@+id/cfDate"
                    style="@style/titleText"
                    android:text="Date of the hike:"/>
                <TextView
                    android:id="@+id/cfParking"
                    style="@style/titleText"
                    android:text="Parking available:"/>
                <TextView
                    android:id="@+id/cfLength"
                    style="@style/titleText"
                    android:text="Length of the hike:"/>
                <TextView
                    android:id="@+id/cfLevel"
                    style="@style/titleText"
                    android:text="Difficulty level:"/>
                <TextView
                    android:id="@+id/cfDescription"
                    style="@style/titleText"
                    android:text="Description:"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#37FE00"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancerCf"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    style="@style/yesNoBtn"
                    android:textColor="@color/cancercolorbutton"
                    android:textStyle="bold"
                    android:text="Cancel"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnYesCf"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/yesNoBtn"
                    android:textColor="@color/colorbutton"
                    android:textStyle="bold"
                    android:text="Confirm"/>
            </LinearLayout>
</LinearLayout>