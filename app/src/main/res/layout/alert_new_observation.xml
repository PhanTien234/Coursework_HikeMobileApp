<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:textAlignment="center"
        style="@style/textTile"
        android:textSize="25dp"
        android:fontFamily="@font/avob"
        android:text="New Observation information"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/confirmNameOb"
            style="@style/textTile"
            android:text="Name:" />

        <TextView
            android:id="@+id/confirmTimeOb"
            style="@style/textTile"
            android:text="Time:"/>
        <TextView
            android:id="@+id/confirmDateOb"
            style="@style/textTile"
            android:text="Date observation:"/>
        <TextView
            android:id="@+id/confirmWeatherOb"
            style="@style/textTile"
            android:text="Weather:"/>
        <TextView
            android:id="@+id/confirmDescriptionOb"
            style="@style/textTile"
            android:text="Description:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DFDFDF"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            style="@style/buttonYesNo"
            android:textColor="@color/btncancelcolor"
            android:text="Cancel"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmYes"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/buttonYesNo"
            android:textColor="@color/btncolor"
            android:text="Confirm"/>
    </LinearLayout>
</LinearLayout>