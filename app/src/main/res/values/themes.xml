<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HikeAppCW" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorSecondary">@color/AccentColor</item>
        <item name="colorAccent">#ff2400</item>
        <item name="bottomNavigationStyle">@style/navigationMenu</item>
    </style>

    <style name="Theme.HikeAppCW" parent="Base.Theme.HikeAppCW" />

    <style name="textTile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="textInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/bahnschrift</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">15dp</item>
        <item name="buttonTint">@color/btnradiocolor</item>
        <item name="android:textColor">@color/btnradiocolor</item>
    </style>

    <style name="navigationMenu" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/avo</item>
        <item name="itemTextColor">@color/navbottomcolor</item>
        <item name="itemIconTint">@color/navbottomcolor</item>
        <item name="menu">@menu/bottom_nav</item>
    </style>

    <style name="button" parent="Widget.Material3.Button">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/bahnschrift</item>

    </style>

    <style name="buttonYesNo" parent="Widget.Material3.Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/textar</item>
        <item name="android:textSize">30dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

</resources>